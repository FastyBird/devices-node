{
  "$schema" : "http://json-schema.org/draft-07/schema#",
  "definitions" : {
    "types" : {
      "nullable_string" : {
        "oneOf" : [
          {
            "type" : "null"
          },
          {
            "type" : "string"
          }
        ]
      }
    },
    "state" : {
      "type" : "string",
      "enum" : [
        "connected",
        "disconnected",
        "init",
        "ready",
        "sleeping",
        "lost",
        "alert",
        "unknown"
      ]
    }
  },
  "type" : "object",
  "properties" : {
    "device" : {
      "type" : "string"
    },
    "name" : {
      "type" : "string"
    },
    "state" : {
      "$ref" : "#/definitions/state"
    },
    "properties" : {
      "type" : "array",
      "items": {
        "type": "string"
      }
    },
    "channels" : {
      "type" : "array",
      "items": {
        "type": "string"
      }
    },
    "extensions" : {
      "type" : "array",
      "items": {
        "type": "string"
      }
    },
    "control" : {
      "type" : "array",
      "items": {
        "type": "string"
      }
    },
    "parent" : {
      "$ref" : "#/definitions/types/nullable_string",
      "default" : null
    },
    "retained" : {
      "type" : "boolean",
      "default" : false
    }
  },
  "required" : [
    "device"
  ]
}
